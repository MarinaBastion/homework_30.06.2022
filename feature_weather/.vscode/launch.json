    "version": "0.2.0",
    "configurations": [
        {
            "name": "WeatherApi",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/WeatherApi/WeatherApi.WebHost/bin/Debug/net6.0/WeatherApi.WebHost.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/WeatherApi/WeatherApi.WebHost",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "windsharing",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build1",
            "program": "${workspaceFolder}/src/windsharing/WebApi/bin/Debug/net6.0/WebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/windsharing/WebApi",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
      ],
      "compounds": [
        {
            "name": "WeatherApi/windsharing",
            "configurations": ["WeatherApi", "windsharing"]
